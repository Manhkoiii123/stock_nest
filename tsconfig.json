{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@manh/database": [
        "libs/database/src"
      ],
      "@manh/database/*": [
        "libs/database/src/*"
      ],
      "@manh/vndirect-client": [
        "libs/vndirect-client/src"
      ],
      "@manh/vndirect-client/*": [
        "libs/vndirect-client/src/*"
      ]
    }
  }
}